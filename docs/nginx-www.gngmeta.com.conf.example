# gngmeta.com / www.gngmeta.com - AI Energy SLLM 앱
# 현재 앱은 base: '/' 로 빌드되어 /assets/... 를 요청하므로,
# 이 도메인의 document root 를 배포 폴더(aienergy)로 맞춰야 합니다.
#
# 적용 방법 (34.64.248.144):
# 1. 이 내용으로 /etc/nginx/sites-available/gngmeta.com.conf 생성
# 2. sudo ln -sf /etc/nginx/sites-available/gngmeta.com.conf /etc/nginx/sites-enabled/
# 3. sudo nginx -t && sudo systemctl reload nginx
# 4. SSL: sudo certbot --nginx -d gngmeta.com -d www.gngmeta.com

server {
    listen 80;
    server_name gngmeta.com www.gngmeta.com;
    # 앱이 /var/www/html/aienergy/ 에 배포되어 있으므로, document root 를 그 폴더로 설정
    root /var/www/html/aienergy;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /assets/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
}

